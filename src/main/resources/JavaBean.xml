<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor">
       <constructor-arg name="name" value="Ranveer"></constructor-arg>
        <constructor-arg index="1" value="male"></constructor-arg>
        <constructor-arg type="int" value="27"></constructor-arg>
    </bean>


    <bean id="movie1" class="com.stackroute.domain.Movie" scope="singleton">

        <constructor-arg index="0" ref="actor1"></constructor-arg>

    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Salman"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg type="int" value="50"></constructor-arg>

    </bean>


    <bean id="movie2" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg index="0" ref="actor2"></constructor-arg>

    </bean>


</beans>